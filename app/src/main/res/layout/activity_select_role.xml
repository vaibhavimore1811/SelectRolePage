<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SelectRoleActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/daynight_textColor"
        android:fontFamily="@font/montserrat_bold"
        android:text="choose what you need" />

       <LinearLayout
           android:id="@+id/linerLylOptionOne"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/txtTitle"
           android:gravity="center"
           android:layout_centerHorizontal="true"
           android:padding="25dp"
           android:layout_marginTop="30dp"
           android:background="@drawable/primary_color_square">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Option 1"
              android:textColor="#8DC2DC"
              android:textSize="24sp"
              android:fontFamily="@font/montserrat_bold"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:layout_marginStart="5dp"
               android:textColor="#ffff"
               android:textSize="24sp"
               android:fontFamily="@font/montserrat_bold"/>

       </LinearLayout>
       <LinearLayout
           android:id="@+id/linerLylOptionTwo"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/linerLylFindAJob"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_centerHorizontal="true"
           android:padding="20dp"
           android:layout_marginTop="30dp"
           android:background="@drawable/primary_color_square">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Option"
              android:textColor="#8DC2DC"
              android:textSize="24sp"
              android:fontFamily="@font/montserrat_bold"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2"
               android:layout_marginStart="5dp"
               android:textColor="#ffff"
               android:textSize="24sp"
               android:fontFamily="@font/montserrat_bold"/>

       </LinearLayout>





</RelativeLayout>
